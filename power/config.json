        "ShowLockOption": { "Type": "REG_DWORD", "Data": 0 },
        "ShowSleepOption": { "Type": "REG_DWORD", "Data": 0 }
      },
      "SUBOPTION": {
        "Hide Hibernate": {
          "HKLM\\SOFTWARE\\Microsoft\\Windows\\CurrentVersion\\Explorer\\FlyoutMenuSettings": {
            "ShowHibernateOption": { "Type": "REG_DWORD", "Data": 0 }
          }
        },
        "Hide Lock": {
          "HKLM\\SOFTWARE\\Microsoft\\Windows\\CurrentVersion\\Explorer\\FlyoutMenuSettings": {
            "ShowLockOption": { "Type": "REG_DWORD", "Data": 0 }
          }
