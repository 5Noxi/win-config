      "HKLM\\SYSTEM\\CurrentControlSet\\Control\\Session Manager\\Power": {
        "HiberbootEnabled": { "Type": "REG_DWORD", "Data": 0 }
      },
      "HKLM\\Software\\Policies\\Microsoft\\Windows\\System": {
