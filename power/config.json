        "HiberbootEnabled": { "Type": "REG_DWORD", "Data": 1 }
      },
      "HKLM\\Software\\Policies\\Microsoft\\Windows\\System": {
        "HiberbootEnabled": { "Type": "REG_DWORD", "Data": 1 }
