          "Pattern": "HKLM\\SYSTEM\\CurrentControlSet\\Control\\Power\\EnergyEstimation\\Storage\\*",
          "Operations": [
            { "Name": "IdleStatesNumber", "Type": "REG_DWORD", "Value": 0 }
          ]
        }
      }
    },
    "revert": {
